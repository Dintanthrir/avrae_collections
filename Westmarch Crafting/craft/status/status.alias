<drac2>
using(
    craft = '0863d26e-1858-4bc6-99d3-f8d82dab6d2a',
    embeds = '72fea181-ba03-4cb4-8edf-1f3bc5a49578', # Owned by Lathaon#6649
    logger = '00186972-7692-4f56-9ab7-60f0089704a4',
)

USAGE = f"{ctx.prefix}{ctx.alias} status"

args = &ARGS&
parsed_args = argparse(args)

status = craft.status()

desc = ''
fields = []
if status:
    desc = f"An item is in progress.\nYou can use `{ctx.prefix}{ctx.alias} discard` to abandon your work if you want to start crafting a different item."
    fields += craft.status_fields()
else:
    desc = f"No crafting in progress.\nUse `{ctx.prefix}{ctx.alias} setup` to start crafting."

embed = {
    'title': f"**{get('name')}** checks their crafting progress",
    'desc': desc,
    'fields': fields + (logger.log_fields(level=logger.LEVELS.DEBUG) if parsed_args.last('verbose') else []),
    'thumb': get('image'),
    'footer': USAGE
}

return embeds.get_output(embed=embed)
</drac2>
